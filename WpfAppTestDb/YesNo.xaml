<Window x:Class="WpfAppTestDb.YesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTestDb"
        mc:Ignorable="d"
        Title="YesNo" Height="150" Width="200"
        WindowStartupLocation="CenterScreen"
        x:Name="mWind">
    <Grid>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" x:Name="LabelMaybe"></TextBlock>
        <StackPanel Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Margin="5" x:Name="btnYes" Height="50" Width="50" Click="btnYes_Click">ДА</Button>
            <Button Margin="5" x:Name="btnNo" Height="50" Width="50" Click="btnNo_Click">НЕТ</Button>
        </StackPanel>
    </Grid>
</Window>
